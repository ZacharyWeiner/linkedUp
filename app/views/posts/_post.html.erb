<style type="text/css">
	.panel-body > div.video {text-align:center;}
</style>

<div class="panel panel-default">
<div class="panel-heading">
<%= gravatar_tag post.user.email, size: 20 %><%= post.user.username %> about <%= time_ago_in_words(post.created_at) %> ago  <% if current_user && current_user == post.user %> <%= link_to "edit", edit_post_path(post)%> <%= link_to "x", post_path(post), method: :delete %> <%end%>
</div>
<div class="panel-body">
<%= raw(post.body_html) %>
</div>
</div>
