<%= simple_form_for(@post) do |f|%>
	<div class="panel panel-default">
		<div class="panel-heading">
		New Post
		</div>
		<div class="panel-body">
			<%=f.error_notification %>
			<%= f.input :content, required: :true, label: false, placeholder: "Say Something Awesome!", input_html: {class: "form-control"} %>
		</div>
		<div  class="panel-footer">
			<%= f.button :submit, class: "btn btn-button btn-primary btn-block" %>
		</div>
	</div>
<% end %>