<div class="jumbtron">
	<div class="container">
		<div class="row">
			<div class="col-md-4">
				<%= gravatar_tag @user.email, size: 200 %>
			</div>
			<div class="col-md-4">
				<h3><%= @user.username %></h3>
				<p>Age: <%= @user.age %></p>
				<p>Gender: <%= @user.gender %></p>
			</div>	
			<div class="col-md-4">
				<h3>Who am I</h3>
				<small><%= @user.bio %></small>
			</div>		
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<div class="">
				<div class=""> Friends (<%= @user.active_friends.size %>)</div>
				<div class="">
					<% @user.active_friends.last(16).each do |u|%>
						<%= link_to user_path(u.username) do %>
							<%= gravatar_tag u.email, size: 40 %> 
						<%end%>
					<% end %>
				</div>
			</div>
		</div>
		<div class="col-md-6">
			<% if current_user && current_user.username == params[:id] %>
			<%= render "posts/form" %>
			<% end %>
			<%= render @posts %>
		</div>
		<div class="col-md-3">
			<%= render_activities(@activities)%>
		</div>
	</div>
</div>