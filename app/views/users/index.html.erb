<div class="jumbotron">
<div class="text-center">
	<h2>Only The Finest!</h2>
	<% if current_user.present? %>
	<div class="btn-group" role="group" aria-label="Default Button Groups">
		<%= link_to "Everyone", users_path, class: "btn btn-default"%>
		<%= link_to "Friends", users_path(people: "friends"), class: "btn btn-default #{'active' if params[:people] == 'friends'}"%>
		<%= link_to "Pending", users_path(people: "pending"), class: "btn btn-default #{'active' if params[:people] == 'pending'}"%>
		<%= link_to "Requests", users_path(people: "requests"), class: "btn btn-default #{'active' if params[:people] == 'requests'}"%>
	</div>
	<% end %>
</div>
</div>

<div class="container">
	<div class="row">
		<%= render @users %>
	</div>
</div>